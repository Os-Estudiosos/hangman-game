<ConfigsScreen>:
    name: 'configs'
    
    MDBoxLayout:
        orientation: 'vertical'
    
        MDTopAppBar:
            title: 'Configurações'
            elevation: 10
            left_action_items: [[ "arrow-left", lambda x: root.manager.go_to('home') ]]
        
        MDBoxLayout:
            orientation: 'vertical'

            MDBoxLayout:
                orientation: 'vertical'

                MDLabel:
                    text: 'Dificuldade'
                    font_name: 'Merich'
                    font_size: 20
                    halign: 'center'
                
                Button:
                    text: 'Escolher Dificuldade'
                    group: 'difficulty'
                    size_hint: None, None
                    size: 130, 40
                    pos_hint: { 'center_x': .5, 'center_y': .5 }
                    font_size: 13
                    font_name: 'Merich'
        
        MDBoxLayout:
            orientation: 'vertical'

            MDLabel:
                text: 'Letras'
                font_name: 'Merich'
                font_size: 20
                halign: 'center'
            
            MDTextField:
                helper_text: 'Digite a quantidade de letras que a palavra possui'
                helper_text_mode: 'persistent'
                pos_hint: { 'center_x': .5, 'center_y': .5 }
