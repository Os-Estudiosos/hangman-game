#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import FontContextManager kivy.core.text


<HomeScreen>:
    name: 'home'

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: 'Jogo da Forca'
            background_color: (.1, .1, .1, 1)
            elevation: 0

        MDBoxLayout:
            orientation: 'vertical'
            padding: 25

            MDBoxLayout:
                orientation: 'vertical'

                Button:
                    text: 'Jogar'
                    size: 300, 100
                    size_hint: None, None
                    pos_hint: { 'center_x': .5, 'center_y': .5 }
                    on_press: root.manager.transition = FadeTransition()
                    font_name: 'Merich'
                    font_size: 34

                    background_color: (.36, .85, .29, 1)

            MDBoxLayout:
                orientation: 'vertical'

                Button:
                    halign: 'center'
                    size: 300, 100
                    size_hint: None, None
                    pos_hint: { 'center_x': .5, 'center_y': .5 }
                    text: 'Configurações'
                    on_press: root.manager.go_to('configs')
                    font_name: 'Merich'
                    font_size: 34
                    background_color: (.31, .78, .8, 1)
            
            MDBoxLayout:
                orientation: 'vertical'

                Button:
                    halign: 'center'
                    size: 300, 100
                    size_hint: None, None
                    pos_hint: { 'center_x': .5, 'center_y': .5 }
                    text: 'Sair'
                    on_press: exit()
                    font_name: 'Merich'
                    font_size: 34
                    background_color: (.82, .003, .01, 1)
            
